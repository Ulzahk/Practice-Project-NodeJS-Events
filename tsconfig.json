{
  "compilerOptions": {
    "target": "es2017",
    "types": ["node", "jest"],
    "removeComments": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@database/*": ["src/database/*"],
      "@lists/*": ["src/lists/*"],
      "@users/*": ["src/users/*"],
      "@mocks/*": ["test/mocks/*"],
    }
  },
  "exclude": ["node_modules", "dist", ".vscode", "test"]
}
